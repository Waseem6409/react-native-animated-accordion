{
  "name": "react-native-animated-accordion",
  "version": "1.1.2",
  "description": "React Native Component for creating animated accordion, collapsible, toggles etc",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install && yarn example pods",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build"
  },
  "keywords": [
    "react",
    "react-native",
    "ios",
    "android",
    "animated",
    "accordion",
    "collapsible",
    "react native collapsible",
    "react native accordion",
    "react-component",
    "react-native-component",
    "mobile",
    "ui",
    "collapse",
    "toggle"
  ],
  "repository": "https://github.com/Waseem6409/react-native-animated-accordion",
  "author": "Waseem Munir <waseem6409@gmail.com> (https://github.com/Waseem6409)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Waseem6409/react-native-animated-accordion/issues"
  },
  "homepage": "https://github.com/Waseem6409/react-native-animated-accordion#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.1",
    "@evilmartians/lefthook": "^1.3.10",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.1",
    "@types/react": "~18.2.0",
    "@types/react-native": "0.71.6",
    "commitlint": "^17.6.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "pod-install": "^0.1.38",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-native": "0.71.7",
    "react-native-builder-bob": "^0.20.4",
    "react-native-reanimated": "^3.1.0",
    "release-it": "^15.10.1",
    "typescript": "^5.0.4"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": ">=2.0.0"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
